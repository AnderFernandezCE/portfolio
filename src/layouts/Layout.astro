---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Developer and engineer portfolio from Ander Fernandez" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #ffffff;
		background-size: 224px;
	}
	body{
		margin: 0;
		padding: 0;
		background-color: #1C1C1C;
		height: 100%;
		color:white
	}
	*,*::before,*::after {
		box-sizing: border-box;
	}
	h1,h2,h3,h4,h5{
		margin: 0;
	}
</style>
