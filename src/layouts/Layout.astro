---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Developer and engineer portfolio from Ander Fernandez" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Saira+Condensed:wght@700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Saira+Condensed&display=swap');

	html {
		font-family: 'Saira Condensed', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body{
		margin: 0;
		padding: 0;
		background-color: #1C1C1C;
		height: 100%;
		color:white;
		word-break: break-word;
	}
	*,*::before,*::after {
		box-sizing: border-box;
	}
	h1,h2,h3,h4,h5{
		margin: 0;
		font: bold
	}
	h1{
    font-size: 24px;
  }
	p{
		font-size: 16px;
	}

	@media (width >= 700px) {
		h1{
    font-size: 50px;
  	}
		h2{
			font-size: 36px;
		}
		p{
      font-size: 22px;
    }
	}
</style>
