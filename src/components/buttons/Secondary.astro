---
const {href, width} = Astro.props
---
<a href={href} style={`width: ${width}px`} target="_blank">
  <slot />
</a>

<style>
  a{
    max-width: 256px;
    width: 100%;
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #1C1C1C;
    border: 1px solid #696969;
    border-radius: 50px;
    font-size: 18px;
    text-decoration: none;
    color: white;
  }

  @media (width >= 600px) {
    a{
      font-size: 22px;
    }
  }
  @media (width >= 900px) {
    a{
      font-size: 26px;
    }
  }
</style>

