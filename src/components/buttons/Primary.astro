---
const {href, width, classname , ...rest} = Astro.props
---
<a href={href} style={`width: ${width}px`} class={classname} {...rest}>
  <slot />
</a>

<style>
  a{
    max-width: 256px;
    width: 100%;
    padding:10px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: var(--purple-text) ;
    border-radius: 50px;
    color:black;
    text-decoration: none;
    font-size: 18px;
    transition: all 0.2s ease-in-out;
  }
  a:hover{
    scale: 1.05;
  }

  @media (width >= 600px) {
    a{
      font-size: 22px;
    }
  }
  @media (width >= 900px) {
    a{
      font-size: 26px;
    }
  }
</style>