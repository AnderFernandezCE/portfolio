---
const {imagePosition, title, status, statusMessage} = Astro.props
---
<article class={imagePosition}>
  <!-- <img src="/prueba5.svg" class="image-background"> -->
  <div class="image-container">
    <slot name="image" />
  </div>
  <div class="project-info-container">
    <div class="project-info"> 
      <h2>{title} </h2>
      <!-- <header>
        <div class:list={["ring-container", status]}>
          <div class="ringring"></div>
          <div class="circle"></div>
          <p>{statusMessage}</p>
        </div>
      </header> -->
      <slot name="project-description"></slot>
      <div class="tag-section">
        <slot />
      </div>
      
    </div>
   
  </div>
</article>

<style>
  .tag-section{
    display: flex;
    /* justify-content: center;
    align-items: ; */
  }
  article{
    width: 100%;
    height: 100%;
    border: 1px solid #7575756c;
    border-radius: 20px;
    /* display: flex;
    flex-direction: column; */
    display: grid;
    grid-template-columns: 1fr;
    margin-bottom: 75px;
    position: relative;
  }

  .project-info-container{
    background: linear-gradient(0deg, rgba(45, 45, 45, 0.65) 0%, rgba(29, 29, 29, 0.62) 100.01%);
    border-radius: 0 0 20px 20px;
    /* width: 100%; */
    z-index: 1;
  }

  .project-info{
    width: 80%;
    margin: auto;
    display: flex;
    flex-direction: column;
    text-wrap: balance;
    /* gap:15px; */
  }
  h2{
    color: #B47CFB;
    margin-top: 15px;
  }
  

  .image-container{
    display: flex;
    justify-content: center;
    align-items: center;
    background: radial-gradient(99.79% 99.79% at 50.21% 0%, rgba(91, 143, 185, 0.2844) 0%, rgba(91, 143, 185, 0.036) 100%);
    backdrop-filter: blur(3px);
    height: 200px;
    border-radius:20px 20px 0 0;
    position: relative;
    z-index: ;
  }
  .image-container::after{
    content: "";
    width: 80vw;
    aspect-ratio: 1/1;
    background-color: #7ab4e028;
    position: absolute;
    border-radius: 50%;
    top: -30%;
    left: 50%;
    transform: translateX(-50%);
    z-index: -1;
    filter: blur(120px);
  }

  header{
    display: flex;
    align-items: center;
    gap: 10px;
    height: 60px;
    margin-top: 15px;
    justify-content: space-between;
  }
  .ring-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 25px;
    height: 25px;
  }

