---
const { title, id } = Astro.props
---

<section id={id}>
  {title && <h2>{title}</h2>}
  <slot />
</section>  

<style>
  section{
    max-width:900px;
    width:65%;
    margin: 0 auto 72px;
    /* position: relative; */
  }
  @media (width >= 700px) {
    section{
      width:75%;
      margin: 0 auto 340px;
    }
  }

</style>